<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_dialog_bg_white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="#ff222222"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="该账号已在其他设备登录\n请重新登录!"
            android:textColor="#ff222222"

            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="35dp"
                android:background="@drawable/radius_15dp_hollow_red_bg"
                android:gravity="center"
                android:paddingLeft="36dp"
                android:paddingTop="6dp"
                android:paddingRight="36dp"
                android:paddingBottom="6dp"
                android:text="取消"
                android:textColor="#E83627"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radius_23dp_ff462e_red_bg"
                android:gravity="center"
                android:paddingLeft="36dp"
                android:paddingTop="6dp"
                android:paddingRight="36dp"
                android:paddingBottom="6dp"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>